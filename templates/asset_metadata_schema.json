{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Asset Metadata Schema",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "category": { "type": "string" },
    "format": { "type": "string", "enum": ["3d_model", "image", "image_sequence", "sprite_sheet", "video", "audio", "shader", "material", "font", "prefab", "level", "fx_particle", "ui_element", "other"] },
    "name": { "type": "string" },
    "description": { "type": "string" },
    "quantity": { "type": "integer", "minimum": 0 },
    "variant": { "type": "string" },
    "spec": { "type": "string" },
    "resolution": { "type": "string" },
    "polycount": { "type": "integer", "minimum": 0 },
    "lod": { "type": "integer", "minimum": 0 },
    "platform": { "type": "string", "enum": ["PC", "Mobile", "Console", "Web", "Other"] },
    "usage": { "type": "string" },
    "priority": { "type": "string", "enum": ["high", "medium", "low"] },
    "dependencies": { "type": "array", "items": { "type": "string" } },
    "owner": { "type": "string" },
    "startDate": { "type": "string", "format": "date" },
    "endDate": { "type": "string", "format": "date" },
    "source": { "type": "string" },
    "sourceLocator": { "type": "string" },
    "filePath": { "type": "string" },
    "status": { "type": "string", "enum": ["planned", "in_progress", "done"] },
    "tags": { "type": "array", "items": { "type": "string" } }
  },
  "required": ["id", "category", "format", "name", "priority", "status"]
}
